{% trans_default_domain 'FOSUserBundle' %}

<h1 align="center">Login</h1>


<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"
               required="required" autocomplete="username"/>
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required"
               autocomplete="current-password"/>
    </div>

    <div class="form-check">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <div class="row">
        <div class="col">
            <input class="btn btn-primary" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>

        </div>

        <div>
            <a href="{{ path('fos_user_registration_register') }}">
                <button class="btn btn-primary" type="button">Register</button>
            </a>
        </div>

        {% if error %}
            <div style="width: 100%; margin-top: 10%" class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {#<div class="col">#}
            {#<a href="{{ path('app_homepage') }}">#}
                {#<button class="btn btn-danger" type="button">Cancel</button>#}
            {#</a>#}
        {#</div>#}
    </div>

    <hr>

    <div class="col" align="center">
        <a href="{{ path('fos_user_resetting_request') }}">
            <button class="btn btn-dark" type="button">Reset Password</button>
        </a>
    </div>
</form>
