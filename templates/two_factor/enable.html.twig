{% extends 'base.html.twig' %}
{% block title %} Enable 2FA {% endblock %}

{% block body %}

    <div class="container">
        <div class="row center-div">
            <div class="col-12" style="float: left">
                <img src="{{ qr_code_data_uri(qrContent, { writer: 'png', label: secret }) }}"/>
            </div>


            <div class="form-group col-12" style="float: right; padding-left: 75px;">
                {{ form_start(twoFactorForm) }}
                {{ form_widget(twoFactorForm) }}
                <button class="btn btn-primary" type="submit">Enable</button>
                <a href="{{ path('app_homepage') }}">
                    <button class="btn btn-danger" type="button">Cancel</button>
                </a>

                {{ form_end(twoFactorForm) }}
            </div>
        </div>

    </div>





{% endblock %}