        <h4 class="header-center">Character Decks</h4>
        {% for utilDecks in utilDeck %}

            <div class="card js-deck-item" style="background-color: #FFC200; margin-top: 7%"
                 data-id="{{ utilDecks.id }}" onclick="selectUtilDeck(this)">
                <div class="card-header text-info text-center" style="background-color: blue">
                    <h3 class="" style="color: #FFFFFF">{{ utilDecks.name }}</h3>
                </div>
                <div class="card-body">
                    <div class="card-title text-center">
                        <button class="btn btn-primary" data-toggle="collapse" data-target="#{{ utilDecks.id }}"
                                aria-expanded="false" aria-controls="{{ utilDecks.id }}">Cards in the deck
                        </button>
                    </div>
                    <div class="collapse" id="{{ utilDecks.id }}">

                        <blockquote class="blockquote text-muted">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">{{ utilDecks.card1.utilCard.utilName }}
                                    - {{ utilDecks.card1.utilCard.utilTier }}</li>
                                <li class="list-group-item">{{ utilDecks.card2.utilCard.utilName }}
                                    - {{ utilDecks.card2.utilCard.utilTier }}</li>
                                <li class="list-group-item">{{ utilDecks.card3.utilCard.utilName }}
                                    - {{ utilDecks.card3.utilCard.utilTier }}</li>
                            </ul>
                        </blockquote>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endmacro %}