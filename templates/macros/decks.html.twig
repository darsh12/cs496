{% macro charDecks(charDeck) %}
    <div id="charDeck">
        <h4 class="header-center">Character Decks</h4>
        {% for charDecks in charDeck %}

            <div class="card js-deck-item" data-id="{{ charDecks.id }}" onclick="selectCharDeck(this)"
                 style="margin-top: 7%">
                <div class="card-header text-info text-center">
                    <h3> {{ charDecks.name }}</h3>
                </div>
                <div class="card-body">
                    <div class="card-title text-center">
                        <button class="btn btn-primary" type="button" data-toggle="collapse"
                                data-target="#{{ charDecks.id }}" aria-expanded="false"
                                aria-controls="{{ charDecks.id }}">
                            Cards in the deck
                        </button>
                    </div>
                    <div class="collapse" id="{{ charDecks.id }}">
                        <blockquote class="blockquote text-muted">
                            <ul class="list-group list-group-flush">

                                <li data-value="{{ charDecks.card1.charCard.id }}" onclick="showCardPopup(this)"
                                    class="list-group-item">{{ charDecks.card1.charCard.charName }}
                                    - {{ charDecks.card1.charCard.charTier }}</li>

                                <li data-value="{{ charDecks.card2.charCard.id }}" onclick="showCardPopup(this)"
                                    class="list-group-item">{{ charDecks.card2.charCard.charName }}
                                    - {{ charDecks.card2.charCard.charTier }}</li>

                                <li data-value="{{ charDecks.card3.charCard.id }}" onclick="showCardPopup(this)"
                                    class="list-group-item">{{ charDecks.card3.charCard.charName }}
                                    - {{ charDecks.card3.charCard.charTier }}</li>

                                <li data-value="{{ charDecks.card4.charCard.id }}" onclick="showCardPopup(this)"
                                    class="list-group-item">{{ charDecks.card4.charCard.charName }}
                                    - {{ charDecks.card4.charCard.charTier }}</li>

                                <li data-value="{{ charDecks.card5.charCard.id }}" onclick="showCardPopup(this)"
                                    class="list-group-item">{{ charDecks.card5.charCard.charName }}
                                    - {{ charDecks.card5.charCard.charTier }}</li>
                            </ul>
                        </blockquote>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endmacro %}

{% macro utilDecks(utilDeck) %}
