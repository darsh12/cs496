{% macro utilCard(card, attribute, image) %}
    <div class="utility">
        <div class="util_name">{{ card.utilName }}</div>
        <div class="util_card">
            <h4 class="mod_header">ATTRIBUTE MODS</h4>
            <table class="util_attr_table">
                <tr>
                    <td>HP</td>
                    <td>{{ attribute.hp }}%</td>
                </tr>
                <tr>
                    <td>ATT</td>
                    <td>{{ attribute.attack }}%</td>
                </tr>
                <tr>
                    <td>DEF</td>
                    <td>{{ attribute.defense }}%</td>
                </tr>
            </table>

            <table class="util_attr_table">
                <tr>
                    <td>AGI</td>
                    <td>{{ attribute.agility }}%</td>
                </tr>
                <tr>
                    <td>LCK</td>
                    <td>{{ attribute.luck }}%</td>
                </tr>
                <tr>
                    <td>SPD</td>
                    <td>{{ attribute.speed }}%</td>
                </tr>
            </table>
            <img class="util_img" src="{{ asset(image) }}">

            <h4 class="effect_header">EFFECTS</h4>
            <ul class="effect_list">
                <li title="DEFENDING: Peek at {{ card.effectType }} of the attacker's character TYPES.&#10;ATTACKING: Hide {{ card.effectType }} of your character TYPES from the defender.">
                    <label>SHOW TYPE</label>&nbsp&nbsp&nbsp&nbsp{{ card.effectType }}</li>

                <li title="DEFENDING: Show the ORDER of {{ card.effectOrder }} of the attacker's exposed characters.&#10;ATTACKING: Hide {{ card.effectOrder }} of your exposed character's ORDER.">
                    <label>SHOW ORD</label>&nbsp&nbsp&nbsp&nbsp{{ card.effectOrder }}</li>

                <li title="DEFENDING: Peek at {{ card.effectClass }} of the attacker's character CLASSES.&#10;ATTACKING: Hide {{ card.effectClass }} of your character CLASSES from the defender.">
                    <label>SHOW CLSS</label>&nbsp&nbsp&nbsp&nbsp{{ card.effectClass }}</li>

            </ul>
            <ul class="effect_list">
                <li title="SWAP out {{ card.cardSwap }} characters in your deck for {{ card.cardSwap }} randomly selected characters from your inventory.">
                    <label>SWAP CARD</label>&nbsp&nbsp&nbsp&nbsp{{ card.cardSwap }}</li>

                <li title="DEFENDING: Peek at {{ card.effectChar }} of the attacker's CHARACTERS.&#10;ATTACKING: Hide {{ card.effectChar }} of your CHARACTERS from the defender.">
                    <label>SHOW CHAR</label>&nbsp&nbsp&nbsp&nbsp{{ card.effectChar }}</li>

                <li title="DEFENDING: Peek at {{ card.effectUtil }} of the attacker's UTILITY cards.&#10;ATTACKING: Hide {{ card.effectUtil }} of your UTILITY cards from the defender.">
                    <label>SHOW UTIL</label>&nbsp&nbsp&nbsp&nbsp{{ card.effectUtil }}</li>
            </ul>
        </div>
    </div>
{% endmacro %}