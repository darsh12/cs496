<div class="row">
    <div class="col">
        <div style="width: 55%; float: left">
            <div class="profile_info">
                <div class="profile_name">{{ user_name }}</div>
                <img id="profile_pic" src="{{ profile_pic }}"
                     class="profile_img">
            </div>
        </div>
        <div class="upload_container">
            {# Upload Form #}
            <label>Upload a new profile picture.</label><br>
            <form name="img_form" id="img_form"  action="my_profile/avatar_upload" type="POST">
                <input type="file" accept="image/*" onchange="showUploadPreview()" id="img_input" name="img_input" form="img_form"><br>
                <button class="btn btn-normal" type="submit" style="margin-top: 2%">Save Profile Picture</button>
                <label id="upload_error" style="display: none;">Error Text</label>
            </form>
        </div>
    </div>

    <div class="col">
        <br>
        <h4 style="margin-bottom: 5%">Change your password</h4>
        <form class="change_pass_form">
            <label for="inputEmail3" >Current Password</label>
            <input type="email"  id="inputPassword" placeholder="Current Password"><br>

            <label for="inputPassword3" >New Password</label>
            <input type="password"  id="inputNewPassword" placeholder="New Password"><br>

            <label for="inputPassword3" >Confirm New Password</label>
            <input type="password"  id="inputConfirm" placeholder="Confirm New Password"><br>

            <button class="btn btn-normal">Save Changes</button>
        </form>
    </div>
</div>
